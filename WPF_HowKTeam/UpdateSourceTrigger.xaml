<Window x:Class="WPF_HowKTeam.UpdateSourceTrigger"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_HowKTeam"
        mc:Ignorable="d"
        Title="UpdateSourceTrigger" Height="450" Width="800">
    <StackPanel>
        <TextBox Text="{Binding DataValue, UpdateSourceTrigger=PropertyChanged}"></TextBox>
        <TextBlock Text="{Binding DataValue}"></TextBlock>
        <Button>Click</Button>
    </StackPanel>
</Window>
