<Window x:Class="WPF_HowKTeam.TextBlock"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_HowKTeam"
        mc:Ignorable="d"
        Title="TextBlock" Height="450" Width="800">
    <Grid>
        <TextBlock Foreground="#FFFB1429"
                   Background="Aqua"
                   Height="50"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   TextWrapping="WrapWithOverflow" RenderTransformOrigin="0.5,0.5">
            <TextBlock.Text>
                hk
            </TextBlock.Text>
            <TextBlock.FontSize>
                50
            </TextBlock.FontSize>
            <TextBlock.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="50"/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBlock.RenderTransform>
            </TextBlock>
    </Grid>
</Window>
